#include "blueprint.fc";

contract test_contractA {


    test send_simple_message {
        int amount = 1000000;
        slice to = <some_address>;

        () send_simple_message(to, amount, null(), 0);


        expect_message_sent(to, amount);
    }
    test send_message_with_error_handling {
        int amount = 500000;
        slice to = <some_address>;

        () send_message_with_error_handling(to, amount, null(), 64);
        expect_message_sent(to, amount);
        expect_message_flag(64);
    }
}
